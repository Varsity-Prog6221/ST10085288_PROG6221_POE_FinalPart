        <TextBox PreviewTextInput="PreviewTextInput" x:Name="txtWaterLights" HorizontalAlignment="Left" Margin="211,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <TextBox PreviewTextInput="PreviewTextInput" x:Name="txtCell_telephone" HorizontalAlignment="Left" Margin="211,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
