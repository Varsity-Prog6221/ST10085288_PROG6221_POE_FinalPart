        <CheckBox x:Name="cbCommonExpenses" Content="Check to enter common expenses" HorizontalAlignment="Left" Margin="209,48,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="19" Width="207"  Click="cbCommonExpenses_Click"/>
    </Grid>
</Window>
