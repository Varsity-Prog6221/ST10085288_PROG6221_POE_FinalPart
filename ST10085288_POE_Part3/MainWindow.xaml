        <TextBox PreviewTextInput="PreviewTextInput" x:Name="txtSavingMonths" HorizontalAlignment="Center" Margin="0,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" Grid.Row="1" Grid.Column="2"/>
        <TextBox PreviewTextInput="PreviewTextInput" x:Name="txtSavinginterestRate" HorizontalAlignment="Center" Margin="0,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" Grid.Row="1" Grid.Column="2"/>
        <Label x:Name="lblTotalIncome" Content="Total monthly income:" HorizontalAlignment="Left" Margin="49,6,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMonthlyIncome" HorizontalAlignment="Left" Margin="211,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="PreviewTextInput" />
        <Label x:Name="lblTax" Content="Tax deduction:" HorizontalAlignment="Left" Margin="91,69,0,0" VerticalAlignment="Top"/>
        <TextBox PreviewTextInput="PreviewTextInput" x:Name="txtTax" HorizontalAlignment="Left" Margin="211,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Label x:Name="lblMonthlySaving" HorizontalAlignment="Left" Margin="132,184,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="2"/>
